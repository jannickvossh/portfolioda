.testimonials
	width 100%
	display flex
	flex-wrap wrap
	margin-bottom -80px

	.testimonial
		display flex
		align-items center
		width 50%
		margin-bottom 60px
		height 120px
		justify-content center

		img
			height 60px
			width 60px
			border-radius 50%
			margin-right 20px

		.testimonials-text
			display flex
			flex-direction column
			width 300px

			p
				margin-bottom 10px
				font-style italic

				&::before
					content '„'

				&::after
					content '“'

			h3
				margin-bottom -5px
